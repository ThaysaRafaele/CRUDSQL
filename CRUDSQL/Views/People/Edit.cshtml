@model CRUDSQL.Models.Person

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}


<h1>Editar</h1>

<h4>Pessoa Física</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2 mt-2">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 mt-2">
                <label asp-for="CPF" class="control-label"></label>
                <input type="text" asp-for="CPF" class="form-control txtCPF" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 mt-2">
                <label asp-for="Nascimento" class="control-label"></label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 mt-2">
                <label asp-for="Renda" class="control-label"></label>
                <input asp-for="Renda" type="text" class="form-control money" />
                <span asp-validation-for="Renda" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

